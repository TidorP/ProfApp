      <Label layoutX="375.0" layoutY="220.0" text="Log in as administrator?" />
      <ImageView fx:id="keyImg" fitHeight="21.0" fitWidth="26.0" layoutX="534.0" layoutY="220.0" pickOnBounds="true" preserveRatio="true" />
      <Label layoutX="560.0" layoutY="220.0" text="Code:" />
      <Button fx:id="buttonAdmin" layoutX="763.0" layoutY="215.0" mnemonicParsing="false" onAction="#registerAdmin" text="Admin" />
      <RadioButton fx:id="radioB" layoutX="14.0" layoutY="236.0" mnemonicParsing="false" onAction="#stopMusicHandler" prefHeight="21.0" prefWidth="94.0" text="Music off" textFill="#a15656">
         <font>
            <Font name="System Italic" size="15.0" />
         </font></RadioButton>
      <PasswordField fx:id="passwordText" layoutX="204.0" layoutY="113.0" />
      <PasswordField fx:id="adminCode" layoutX="602.0" layoutY="215.0" prefHeight="31.0" prefWidth="153.0" />
   </children>
</AnchorPane>
