<AnchorPane fx:id="anchor" prefHeight="600.0" prefWidth="833.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.LogInController">
   <children>
      <ImageView fx:id="imageView" fitHeight="545.0" fitWidth="854.0" layoutX="-1.0" layoutY="271.0" pickOnBounds="true" preserveRatio="true" />
      <Label layoutX="39.0" layoutY="56.0" prefHeight="33.0" prefWidth="94.0" text="Username:" textFill="#6b0561">
         <font>
            <Font name="Ink Free" size="20.0" />
         </font>
         <effect>
            <Lighting>
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant />
               </light>
            </Lighting>
         </effect></Label>
      <TextField fx:id="usernameText" layoutX="203.0" layoutY="61.0" />
      <Label layoutX="41.0" layoutY="112.0" text="Password:" textFill="#5b014c">
         <font>
            <Font name="Ink Free" size="20.0" />
         </font>
         <effect>
            <Lighting>
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant />
               </light>
            </Lighting>
         </effect></Label>
      <Label alignment="CENTER" layoutX="144.0" layoutY="14.0" text="Welcome! Please Log in first, as professors and students use a different interface!" textFill="#650707">
